---
import { Icon } from "astro-icon/components";

interface Props {
	date: string;
	role: string;
	company: string;
	location: string;
}

const { date, role, company, location } = Astro.props;
---

<div class="space-y-16">
	<div class="grid grid-cols-1 md:grid-cols-4">
		<div class="text-stone-600 dark:text-stone-200 text-sm">
			{date}
		</div>
		<div class="col-span-3 flex flex-col gap-y-3">
			<div class="font-medium text-primary-600 dark:text-primary-300">
				{role}
				<span class="font-normal">- {company}</span>
			</div>
			<div class="flex items-center space-x-1">
				<Icon
					name="heroicons:map-pin"
					aria-label="Location"
					role="img"
				/>
				<span>{location}</span>
			</div>

			<ul
				class="list-disc
				marker:text-primary-600
				dark:marker:text-primary-300"
			>
				<slot />
			</ul>
		</div>
	</div>
</div>
